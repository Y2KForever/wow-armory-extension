{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "preserveConstEnums": true,
    "noEmit": true, // we let sam build handle the transpilation, this is only for testing
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"]
}
